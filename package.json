{
    "name": "pb-query-builder-ts",
    "version": "0.0.1",
    "description": "A type-safe PocketBase query builder",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "scripts": {
        "prepare": "husky",
        "build": "tsup index.ts --format cjs,esm --dts",
        "release:build": "tsup index.ts --format cjs,esm --dts",
        "release:publish": "changeset publish",
        "release": "run-s release:*",
        "lint": "biome check --write --no-errors-on-unmatched",
        "test": "vitest run"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@changesets/cli": "^2.28.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "npm-run-all": "^4.1.5",
        "tsup": "^8.3.6",
        "typescript": "^5.7.3",
        "vitest": "^3.0.6"
    },
    "lint-staged": {
        "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": "pnpm lint"
    }
}
